.header
  font-size 0.875rem
  padding 0.5rem 1.5rem
  height 100%
  width 240px
  border-right 1px var(--border-type) var(--border)
  position fixed
  overflow scroll
  -ms-overflow-style none
  -moz-overflow-style none
  overflow-style none
  &::-webkit-scrollbar
    display none
  .logo
    max-width 20rem
    margin 0 auto
    a:hover img
      transform scale(1.03)
    img
      width 20rem
      max-width 100%
      transition transform 0.15s cubic-bezier(0, 0.3, 0.8, 1) 0s
      border-radius 50%
      border 2px solid #efefef
      box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
    span
      text-indent -9900px
      display block
      line-height 0
  .tagline
    font-size 0.875rem
    font-weight 700
    line-height 1.5
    text-align left
    margin 1rem auto 2rem
  .nav
    margin 0 0 2em
    font-size 0.875rem
    ul
      list-style none
      margin 1.5rem 0 0
    a
      text-decoration none
      transition all 0.12s cubic-bezier(0, 0.3, 0.8, 1)
      display flex
      align-items center
      letter-spacing 0.05em
      padding 0.8rem 0
      border-bottom 1px var(--border-type) var(--border)
      font-weight 400
      line-height 1
      &:hover
        opacity 1
        color var(--main)
      &>span
        padding 0 0.5em 0 0.4em
        height 1.2rem
        line-height 1.2rem
    .nav-icon
      width 1.2rem
      height 1.2rem
      position relative
      top -0.1em
      fill none
      stroke var(--text)
      stroke-width 3
      stroke-linejoin round
      stroke-linecap round